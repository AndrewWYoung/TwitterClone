{
    "env": {
        "browser": false,
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-unexpected-multiline": 2,
        "no-unreachable": 2,
        "no-console": 0,
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}
